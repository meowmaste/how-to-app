<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @list.name %>
</p>

<%= form_for [@list, @step] do |f| %>
  <%= f.label :title %>
  <%= f.text_area :title, rows: 2, placeholder: "Title" %>
  <br />
  <%= f.submit "Create step", class: "btn btn-primary" %>
<% end %>


<h3>Steps: </h3>
<ul>
	<% @list.steps.each do |step| %>
	<li><%= step.title %></li>
	<% end %>
</ul>

<%= link_to 'Edit', edit_list_path(@list) %> |
<%= link_to 'Back', lists_path %>
